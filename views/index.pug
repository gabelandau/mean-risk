extends layout.pug

block title
    title Risk

block body
    body(ng-controller="brothers")
        nav.nav
            div.nav-center
                h3.nav-item.title.is-3 Risk Management

        div.wrapper
            div.columns
                div.column
                    box.box
                        h4.title.is-4 Brother Manager
                        button.button.is-primary(ng-click="showAddBrother = true") Add Brother
                div.column.is-two-thirds
                    box.box.brother-box
                        table.table.is-striped
                            thead
                                tr
                                    th Scroll
                                    th Name
                                    th Points
                                    th Exempt?
                                    th Chance
                                    th
                            tfoot
                                tr
                                    th Scroll
                                    th Name
                                    th Points
                                    th Exempt?
                                    th Chance
                                    th
                            tbody
                                tr(ng-repeat="x in brothers")
                                    td &#35;{{x.initiation_number}}
                                    td {{x.name}}
                                    td {{x.points}}
                                    td Nah
                                    td 0
                                    td.edit
                                        button.button.is-outlined.is-info Edit
        div.modal(ng-class="{'is-active' : showAddBrother}")
            div.modal-background
            div.modal-card
                header.modal-card-head
                    p.modal-card-title Add Brother
                    button.delete(ng-click="showAddBrother = false")
                section.modal-card-body
                    label.label Name
                    p.control
                        input.input(type="text")
                    label.label Initiation Number
                    p.control
                        input.input(type="text")
                    p.control
                        label.checkbox
                            input.add(type="checkbox")
                            | EC?
                    p.control
                        label.checkbox
                            input.add(type="checkbox")
                            | Co-Op?
                    p.control
                        label.checkbox
                            input.add(type="checkbox")
                            | Graduating?
                footer.modal-card-foot
                    a.button.is-primary Save
                    a.button(ng-click="showAddBrother = false") Cancel
