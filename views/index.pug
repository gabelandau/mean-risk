extends layout.pug

block title
    title Risk

block body
    body(ng-controller="brothers")
        nav.nav
            div.nav-center
                h3.nav-item.title.is-3 Risk Management

        div.wrapper
            div.columns
                div.column
                    include partials/draftForm.pug
                    box.box
                        h5.title.is-5 Manager Panel
                        button.button.is-fullwidth(ng-click="showAddBrother = true") Add Brother
                div.column.is-two-thirds
                    box.box.brother-box
                        include partials/brotherTable.pug

        include partials/addBrotherForm.pug
        include partials/editBrotherForm.pug
